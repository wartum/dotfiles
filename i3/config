# VARIABLES AND ATTRIBUTES  ======================================================#

set $mod Mod1
set $term /usr/bin/alacritty

workspace_layout default
default_border pixel 2
font pango: Noto Serif 11
focus_follows_mouse no
title_align center
floating_modifier $mod
hide_edge_borders smart

# colors
# class                 border  backgr. text    indicator child_border
client.focused          #8700af #00005f #af00ff #aaaaaa   #882288
client.focused_inactive #333333 #221122 #ffffff #000000   #000000
client.unfocused        #333333 #000000 #888888 #000000   #000000
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #000000
client.background       #ffffff

mode "resize" {
    bindsym h resize shrink width 1 px or 1 ppt
    bindsym k resize grow height 1 px or 1 ppt
    bindsym j resize shrink height 1 px or 1 ppt
    bindsym l resize grow width 1 px or 1 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
    bindsym f mode "default"
}
bindsym $mod+r mode "resize"

bar {
    font pango: JetBrains Mono Bold 11
    strip_workspace_numbers yes
    position top
    status_command i3blocks
    tray_padding 1 px
    separator_symbol ïž¥

    colors {
        background #000000
        statusline #af00ff
        separator #af0087

        focused_workspace  #000000 #af00ff #000000
        active_workspace   #000000 #441144 #b0b0b0
        inactive_workspace #000000 #441144 #b0b0b0
        urgent_workspace   #000000 #900000 #ffffff
        binding_mode       #000000 #900000 #ffffff
    }
}

for_window [class="Blueman-manager"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="Matplotlib"] floating enable
for_window [class="Nm-connection-editor"] floating enable
for_window [class="Gtk-intro"] floating enable

# KEY BINDINGS  #=================================================================#

bindsym Caps_Lock --release exec pkill -RTMIN+11 i3blocks
bindsym Num_Lock --release exec pkill -RTMIN+11 i3blocks
bindsym $mod + Shift + r restart

bindsym $mod + d                        exec /usr/bin/dmenu_run
bindsym $mod + a                        exec ~/Bin/emoji_picker.sh
bindsym $mod + p                        exec /usr/bin/thunderbird
bindsym $mod + m                        exec /usr/bin/firefox
bindsym $mod + Return                   exec $term
bindsym $mod + n                        exec $term -e ranger
bindsym $mod + s                        exec ~/Bin/make_screenshot.sh
bindsym $mod + y                        exec ~/Bin/yt_download_from_selection.sh
bindsym $mod + Shift + x                exec ~/Bin/shutdown_menu.sh
bindsym $mod + Shift + c                exec /usr/bin/i3lock -i Pictures/wallpapers/tiger1.png -t

bindsym $mod + h focus left
bindsym $mod + j focus down
bindsym $mod + k focus up
bindsym $mod + l focus right
bindsym $mod + Shift + h move left
bindsym $mod + Shift + j move down
bindsym $mod + Shift + k move up
bindsym $mod + Shift + l move right

bindsym $mod + Shift + w kill

bindsym $mod + f fullscreen toggle
bindsym $mod + w layout tabbed
bindsym $mod + e layout toggle split
bindsym $mod + v split toggle

bindsym $mod + Shift + space floating toggle
bindsym $mod + space focus mode_toggle
bindsym --release button2 kill
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume @DEFAULT_SINK@ +1000; pkill -RTMIN+10 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume @DEFAULT_SINK@ -1000; pkill -RTMIN+10 i3blocks"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute @DEFAULT_SINK@ toggle; pkill -RTMIN+10 i3blocks"
bindsym XF86MonBrightnessUp exec --no-startup-id "echo $(($(cat /sys/class/backlight/intel_backlight/brightness)+50)) > /sys/class/backlight/intel_backlight/brightness"
bindsym XF86MonBrightnessDown exec --no-startup-id "echo $(($(cat /sys/class/backlight/intel_backlight/brightness)-50)) > /sys/class/backlight/intel_backlight/brightness"

# WORKSPACES =====================================================================#

set $ws1 "1:I"
set $ws2 "2:II"
set $ws3 "3:III"
set $ws4 "4:IV"
set $ws5 "5:V"
set $ws6 "6:VI"
set $ws7 "7:VII"
set $ws8 "8:VIII"
set $ws9 "9:IX"
set $ws10 "10:X"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

workspace $ws2 output DP2-3
workspace $ws1 output eDP1

# Autostart  =====================================================================#

exec nm-applet
exec dropbox
exec blueman-applet
exec systemctl --user start org.freedesktop.Notifications
exec systemctl --user start newsboat-reloader
